<div class="d-flex flex-row flex-wrap gap-2">
    <h2 class="w-100 fw-semibold"><%= label %></h2>

    <% if meetings.count == 0 %>
        <div class="card p-3 border-0 w-100 text-center">
            <p class="m-0 fst-italic">No <%= label %> Meetings</p>
        </div>
    <% end %>

    <% meetings.each do |meeting| %>
        <div class="card border-0" style="width: 18rem;">
            <div class="card-body pb-0">
                <div class="card-title">
                    <%= link_to meeting.title, meeting_path(meeting.organization_id,meeting.id), class: "fw-bold" %>
                </div>

                <div class="card-subtitle mb-2 text-muted ">
                    <%= meeting.users.count %> Participant<% if meeting.users.count != 1 %>s<% end %>
                </div>

                <div class="card-text">
                    <%= meeting.scheduled_date.strftime("%^a %b %d, %Y") %>
                </div>
            </div>
            <div class="card-body d-flex flex-wrap justify-content-around align-items-center gap-2">
                <%= link_to "Edit", edit_meeting_path(meeting.organization,meeting), class: "btn btn-primary px-4" %>
                <%= link_to "Delete", meeting_path(meeting.organization,meeting), class: "btn btn-danger px-4",
                    method: :delete,
                    data: { confirm: "Are you sure?" } %>
            </div>
        </div>
    <% end %>
</div>
