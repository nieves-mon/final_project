<div class="card p-3 d-flex flex-row flex-wrap justify-content-between align-items-center gap-4 m-4 border-0">
  <h1 class="fw-bold m-0 flex-shrink-1"><%= current_tenant.name %> Meetings</h1>

  <%= link_to "Create New Meeting", new_meeting_path, class: "btn btn-primary"%>
</div>

<div class="d-flex flex-column m-5 mt-0 gap-4 justify-content-around">
  <%= render "meetings", meetings: @today, label: "Today" %>
  <%= render "meetings", meetings: @future, label: "Future" %>
  <%= render "meetings", meetings: @past, label: "Past" %>
</div>
