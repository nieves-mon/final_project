<p>
  <h1><strong>All Organizational Meetings</strong></h1>
  <%= link_to "Schedule New Meeting", new_meeting_path, class:"btn btn-primary" %>
</p>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
        <th>Title</th>
        <th>Scheduled Date</th>
        <th>Created by</th>        
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @meetings.each do |meeting| %>
        <td><%= link_to meeting.title, meeting_path %></td>
        <td><%= meeting.scheduled_date%></td>
        <td><%= current_user.organization.users.find(meeting.user_id).email %></td>
    <% end %>
    </tr>
  </tbody>
</table>