<%= form_with model: @project do |f| %>

<div class="form-outline mb-4">
    <%= f.label "Project Name", class: "form-label" %>
    <%= f.text_field :title, id:"form2Example2", class:"form-control" %>
  
    <% @project.errors.full_messages_for(:email).each do |message| %>
      <div class="error-msg" style="color:red;"><%= message %></div>
    <% end %>

  </div>

  <div class="form-outline mb-4">
    <%= f.label "Details", class: "form-label" %>
    <%= f.text_area :body, :rows => 6, id:"form2Example2", class:"form-control" %>
    
    <% @project.errors.full_messages_for(:password).each do |message| %>
      <div class="error-msg" style="color:red;"><%= message %></div>
    <% end %>

  </div>

  <div class="d-grid gap-2 col-6 mx-auto">
    <%= f.submit "Submit", class:"btn btn-primary btn-block mb-4" %>
  </div>

<% end %>