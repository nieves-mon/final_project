<p>
  <h1><strong><%= @organization.name %> Projects</strong></h1>
  <%= link_to "Create New Project", new_project_path, class:"btn btn-primary" %>
</p>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
        <th>Title</th>
        <th>Organized By</th>
        <th>Actions</th>       
    </tr>
  </thead>
  <tbody>
  <% @projects.each do |project| %>
    <tr>
        <td><%= link_to project.title, project_path(project.id) %></td>
        <td><%= current_user.organization.users.find(project.user_id).email %></td>
        <td>
          <%= link_to 'Edit', edit_project_path(project.id) %> |
          <%= link_to 'Delete', project_path, method: :delete, data: { confirm: "Are you sure?" }, class: "task-subtitle"%>
        </td>
    </tr>
  <% end %>
  </tbody>
</table>
