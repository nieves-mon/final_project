<p>
  <h1><strong>Add Participant</strong></h1>
</p>

<%= form_with(scope: @user, url: meeting_participants_path, method: 'post') do |f| %>

  <div class="form-outline mb-4">
    <%= f.label :email, class:"form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"form2Example1", class:"form-control" %>
  
    <% @user.errors.full_messages_for(:email).each do |message| %>
      <div class="error-msg" style="color:red;"><%= message %></div>
    <% end %>

  </div>

  <div class="d-grid gap-2 col-6 mx-auto">
    <%= f.submit "Submit", class:"btn btn-primary btn-block mb-4" %>
  </div>
<% end %>
