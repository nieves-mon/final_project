<%= form_with model: @task, url: url do |f| %>
    <div class="form-outline mb-4">
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title, id:"form2Example2", class:"form-control" %>

        <% task.errors.full_messages_for(:title).each do |message| %>
            <div class="error-msg"><%= message %></div>
        <% end %>
    </div>

    <div class="form-outline mb-4">
        <%= f.label :notes, class: "form-label" %>
        <%= f.text_area :notes, :rows => 6, id:"form2Example2", class:"form-control" %>

        <% task.errors.full_messages_for(:notes).each do |message| %>
            <div class="error-msg"><%= message %></div>
        <% end %>

    </div>

    <div class="form-outline mb-4">
        <%= f.label :duedate, "Due Date", class: "form-label" %>
        <%= f.date_field :duedate, id:"form2Example2", class:"form-control" %>

        <% task.errors.full_messages_for(:duedate).each do |message| %>
            <div class="error-msg"><%= message %></div>
        <% end %>
    </div>

    <div class="form-outline mb-4">
        <%= f.label :user_id, "Assign to:", class: "form-label" %>
        <%= f.select :user_id,  task_assignee_options(@project), { selected: 0 }, class: 'form-select' %>

        <% task.errors.full_messages_for(:user_id).each do |message| %>
            <div class="error-msg"><%= message %></div>
        <% end %>
    </div>

    <div class="form-outline input-group mb-3">
        <div class="input-group-text">
            <%= f.check_box :completed, id:"form2Example2", class: "form-check-input mt-0"%>
        </div>
        <%= f.label :completed, "Completed?", class: "form-control" %>

        <% task.errors.full_messages_for(:completed).each do |message| %>
            <div class="error-msg"><%= message %></div>
        <% end %>
    </div>

    <div class="d-grid gap-2 col-6 mx-auto">
        <%= f.submit "Submit", class:"btn btn-primary btn-block mb-4" %>
    </div>

<% end %>
