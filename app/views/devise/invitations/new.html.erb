<div class="formContainer">
  <h2 class="fw-bold"><%= t "devise.invitations.new.header" %></h2>

  <%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <% resource.class.invite_key_fields.each do |field| -%>
      <div class="form-inputs d-grid gap-2 my-2 fw-bolder">
        <%= f.input field %>
      </div>
    <% end -%>

    <div class="form-actions d-flex justify-content-center mt-4">
      <%= f.button :submit, t("devise.invitations.new.submit_button") %>
    </div>
  <% end %>
</div>
