<nav id="sidebar" class="d-flex flex-column justify-content-between align-items-start">
    <div class="sidebar-top w-100">
        <%= link_to organization_path(current_user.organization), class: "side-nav text-decoration-none py-1 ps-3 my-3 d-flex justify-content-start align-items-center" do %>
            <% if current_user.organization.logo.attached? %>
                <%= image_tag current_user.organization.logo, class: "rounded-circle me-2", width: 35, height: 35 %>
            <% end %>

            <h3 class="sidebar-org-name fs-4 m-0 text-white fw-bold"><%= current_user.organization.name %></h3>
        <% end %>

        <ul class="list-unstyled components">
            <li class="fw-semibold fs-5 side-nav">
                <%= link_to dashboard_path,  class: "text-white text-decoration-none py-3 ps-3 d-block" do %>
                    <i class="fa-solid fa-cube"></i><span> Dashboard</span>
                <% end %>
            </li>
            <li class="fw-semibold fs-5 side-nav">
                <%= link_to users_path,  class: "text-white text-decoration-none py-3 ps-3 d-block" do %>
                    <i class="fa-solid fa-users"></i><span> Members</span>
                <% end %>
            </li>
            <li class="fw-semibold fs-5 side-nav">
                <%= link_to projects_path(current_user.organization.id),  class: "text-white text-decoration-none py-3 ps-3 d-block" do %>
                    <i class="fa-solid fa-note-sticky"></i><span> Projects</span>
                <% end %>
            </li>
            <li class="fw-semibold fs-5 side-nav">
                <%= link_to meetings_path(current_user.organization.id),  class: "text-white text-decoration-none py-3 ps-3 d-block" do %>
                    <i class="fa-regular fa-calendar"></i><span> Meetings</span>
                <% end %>
            </li>
        </ul>
    </div>

    <ul class="list-unstyled components" id="user-actions">
        <li class="fs-6 mb-3 side-nav">
            <%= link_to edit_user_registration_path, class: "text-decoration-none text-white py-2 px-2 my-1 d-block" do %>
                <i class="fa-solid fa-circle-user"></i>
                <%= current_user.email %>
            <% end %>
        </li>

        <li class="fs-6 mx-3">
            <%= button_to destroy_user_session_path, method: :delete, class: "btn btn-danger" do %>
                <i class="fa-solid fa-right-from-bracket"></i>
                Logout
            <% end %>
        </li>
    </ul>
</nav>
