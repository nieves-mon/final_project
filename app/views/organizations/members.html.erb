<div>
  <h1><strong><%= @organization.name %></strong></h1>
  <h5> Members Count: <%= @organization_members.count %> </h5>
</div>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Invitation Status</th>
    </tr>
  </thead>
  <tbody>
    <% @organization_members.each do |organization_member| %>
      <tr>
        <td><%= organization_member.id %></td>
        <td><%= organization_member.email %></td>
        <td>
            <% if organization_member.invitation_accepted_at == nil %> Pending <% else %> Accepted  <% end %>
        </td>
    <% end %>
  </tbody>
</table>