<%= link_to 'Edit', edit_organization_path(@organization) %> |
<%= link_to 'Back', organizations_path %>

<p>
  <strong>Organization:</strong>
  <%= @organization.name %>
</p>

<h3>
  <div class="text-center">
    Members
    <div class="badge bg-info text-dark">
      <%= @organization_members.count %>
    </div>
  </div>
</h3>
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @organization_members.each do |organization_member| %>
      <tr>
        <td><%= organization_member.id %></td>
        <td><%= organization_member.email %></td>
    <% end %>
  </tbody>
</table>
<br/>

<hr/>
<%= form_tag invite_a_member_of_organizations_path, method: :get do %>
  <%= email_field_tag 'email' %>
  <%= submit_tag("Invite a member") %>
<% end %>
